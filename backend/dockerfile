# 1. Используем стабильный образ
FROM python:3.12-slim

# 2. Настройка переменных окружения
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# 3. Установка системных зависимостей (объединяем для уменьшения слоев)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgl1 \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 4. Сначала устанавливаем зависимости (используем кеш Docker)
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# 5. Копируем остальной код
COPY . .

# 6. Создаем пользователя и меняем права (безопасность)
RUN useradd -m appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 8000

# 7. Запуск с оптимальными настройками воркеров
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "--workers", "3", "DSC_Greenhouse.wsgi:application"]
