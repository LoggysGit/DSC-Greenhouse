FROM python:3.12-slim

# Оптимизация Python
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Системные зависимости для OpenCV/камер
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgl1 \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Кешируем установку библиотек
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# Копируем проект
COPY . .

EXPOSE 8000

# Рекомендуется добавить --workers 3 для стабильности
CMD ["gunicorn", "DSC_Greenhouse.wsgi:application", "--bind", "0.0.0.0:8000", "--workers", "3"]
